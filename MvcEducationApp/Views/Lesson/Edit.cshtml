@{
    ViewData["Title"] = "Lesson Edit";
}

<h2>Edit Lesson</h2>
<form method="post" asp-controller="Lesson" asp-action="Edit">
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="form-group">
        <label for="Title">Course Name</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="ategory">Text</label>
        <input type="text" class="form-control" id="Text" name="Text" value="@Model.Text">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="3">"@Model.Description"</textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    </div>
</form>