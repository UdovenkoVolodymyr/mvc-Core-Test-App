@{
    ViewData["Title"] = "Lesson Create";
}

    <h2>New Course</h2>
    <form method="post" asp-controller="Lesson" asp-action="Create" enctype="multipart/form-data">
        <input type="hidden" value="@ViewBag.CourseId" name="CourseId" />
        <div class="form-group">
            <label for="Title">Lesson Name</label>
            <input type="text" class="form-control" id="Title" name="Title">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="Text">Lesson Text</label>
            <textarea class="form-control" id="Text" name="Text" rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="file" name="UploadedFile" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" />
            </div>
        </div>
    </form>