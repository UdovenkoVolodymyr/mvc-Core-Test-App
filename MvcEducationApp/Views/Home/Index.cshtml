@{
    ViewData["Title"] = "Courses List";
}

<div>@ViewBag.ErrorMessage</div>
@if (ViewBag.ErrorMessage != null)
{
    <script> alert(@ViewBag.ErrorMessage);</script>
}

<form method="post" asp-controller="Home" asp-action="Index">
    @if (User.IsInRole("admin"))
    {
        <div class="btn-group" role="group" aria-label="Admin buttons">
            <a type="button" onclick="location.href='@Url.Action("Create", "Course")'" name="submitbutton" value="Create" class="btn btn-secondary" style="color: white;">Create</a>
            <button type="submit" name="submitbutton" value="Edit" class="btn btn-secondary">Edit</button>
            <button type="submit" name="submitbutton" value="Delete" class="btn btn-secondary">Delete</button>
        </div>
    }
    else
    {
        <div class="btn-group" role="group" aria-label="User buttons">
            <button type="submit" name="submitbutton" value="Buy" class="btn btn-secondary">Buy</button>
        </div>
    }
<h3>Curse List</h3>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <td>Select</td>
            <td>Title</td>
            <td>Сategory</td>
            <td>Price</td>
            <td>Created By</td>
            <td>LastUpdated</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Course in Model.Data)
        {
            <tr>
                <td>
                    <input name="AreChecked" type="checkbox" value="@Course.Id" />
                </td>
                <td>@Course.Title</td>
                <td>@Course.Сategory</td>
                <td>@Course.Price</td>
                <td>@Course.CreatedBy.Email</td>
                <td>@Course.LastUpdated</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageNumber - 1)"
       class="btn btn-outline-dark">
        Previous
    </a>
}
@if (Model.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageNumber + 1)"
       class="btn btn-outline-dark">
        Next
    </a>
}
</form>
