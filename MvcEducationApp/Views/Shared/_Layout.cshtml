<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <ul class="nav navbar-nav">
                    <li><a href="~/Home/Index" class="navbar-brand">ASP.NET Core Mvc Education App</a></li>
                </ul>
            </div>
        </div>
        <div class="container">
            <div>
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Courses</a></li>
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Index">My Courses</a></li>
                    </ul>
                </div>
                <div>
                    <ul class="nav navbar-nav">
                        <li><p>@User.Identity.Name</p></li>
                    </ul>
                </div>
                <div>
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <input type="submit" value="Log out" />
                    </form>
                </div>
            }
            else
            {
                <div>
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    </ul>
                </div>
            }

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2020 - MvcEducation</p>
        </footer>
    </div>
</body>
</html>